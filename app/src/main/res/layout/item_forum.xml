<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<androidx.cardview.widget.CardView
		android:id="@+id/cv_item_forum"
		style="@style/CardviewMain"
		app:cardUseCompatPadding="true">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/marginSize8"
				android:weightSum="2">

				<ImageView
					android:layout_weight="0.2"
					android:layout_width="@dimen/marginSize24"
					android:layout_height="@dimen/marginSize24"
					android:layout_gravity="center"
					android:src="@drawable/ic_home_black_24dp"/>

				<LinearLayout
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:orientation="vertical"
					android:layout_weight="1.8">

					<TextView
						style="@style/TextViewMain"
						android:id="@+id/tv_item_forum_employee_name"
						android:text="Username User 1"/>
					<TextView
						style="@style/TextViewMain"
						android:layout_marginTop="@dimen/marginSize8"
						android:text="1 Jan 2019 | 17:00"
						android:textSize="@dimen/textSize12"
						android:textColor="@color/grey2"/>
				</LinearLayout>

			</LinearLayout>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical">
				<TextView
					style="@style/TextViewMain"
					android:id="@+id/tv_item_forum_employee_content"
					android:text="@string/lorem_ipsum_text"
					android:textSize="@dimen/textSize14"
					android:padding="@dimen/marginSize8"/>
			</LinearLayout>
			<View
				android:layout_width="match_parent"
				android:layout_height="1dp"
				android:background="@color/grey1"
				android:layout_marginTop="@dimen/marginSize8"/>
			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:padding="@dimen/marginSize8">

				<ImageView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/ic_textsms_blue_16dp" />

				<TextView
					style="@style/TextViewMain"
					android:layout_marginLeft="@dimen/marginSize8"
					android:text="Komentar"
					android:textSize="10sp"
					android:textColor="@color/grey2"
					android:gravity="top"/>
			</LinearLayout>
		</LinearLayout>
	</androidx.cardview.widget.CardView>
</LinearLayout>