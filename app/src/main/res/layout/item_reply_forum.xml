<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/marginSize8"
			android:orientation="horizontal"
			android:weightSum="2">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_weight="1.8"
				android:layout_marginTop="@dimen/marginSize8"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="@dimen/marginSize24"
					android:orientation="horizontal">

					<TextView
						android:id="@+id/tv_item_reply_forum_name"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:gravity="center_vertical"
						android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
						android:textColor="@color/blue2"
						tools:text="Bsilico Eat" />

					<TextView
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:id="@+id/tv_item_reply_forum_time"
						tools:text="June 1, 2015"
						android:gravity="right"
						android:layout_weight="1"
						android:textAppearance="@style/TextAppearance.AppCompat.Caption"
						android:textColor="@color/grey2" />
				</LinearLayout>

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_item_reply_forum_comment"
					android:lineSpacingExtra="4dp"
					android:text="@string/lorem_ipsum_text"
					android:textAppearance="@style/TextAppearance.AppCompat.Caption"
					android:textColor="@color/grey3"
					android:layout_marginTop="@dimen/marginSize16"/>

				<View
					android:layout_width="match_parent"
					android:layout_height="1px"
					android:background="@color/grey1"
					android:layout_marginTop="@dimen/marginSize4"/>
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>