<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	tools:context=".view.kade_complaint.view.ContentComplaintActivity">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		app:layout_constraintTop_toTopOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:padding="@dimen/paddingSize16">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal">

				<ImageView
					android:id="@+id/image_icon"
					android:layout_width="@dimen/marginSize40"
					android:layout_height="@dimen/marginSize40" />


				<View
					android:layout_width="@dimen/marginSize16"
					android:layout_height="0dp" />

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="vertical">

					<TextView
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:gravity="center_vertical"
						tools:text="Bsilico Eat"
						android:id="@+id/tv_content_complaint_name"
						android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
						android:textColor="@color/blue2" />

					<LinearLayout
						android:layout_width="match_parent"
						android:layout_height="wrap_content"
						android:layout_marginTop="@dimen/marginSize4"
						android:orientation="horizontal"
						android:weightSum="1">

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:text="Dari "
							android:textAppearance="@style/TextAppearance.AppCompat.Caption"
							android:textColor="@color/grey1" />

						<TextView
							android:layout_width="wrap_content"
							android:layout_height="wrap_content"
							android:gravity="center_vertical"
							android:id="@+id/tv_content_complaint_institution"
							tools:text="Hwy, Carthage"
							android:textAppearance="@style/TextAppearance.AppCompat.Caption"
							android:textColor="@color/blue1"
							android:textStyle="bold" />

						<TextView
							android:layout_width="match_parent"
							android:layout_height="wrap_content"
							android:id="@+id/tv_content_complaint_date"
							tools:text="June 1, 2015"
							android:gravity="right"
							android:layout_weight="1"
							android:textAppearance="@style/TextAppearance.AppCompat.Caption"
							android:textColor="@color/grey2" />
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="vertical"
				android:layout_marginTop="@dimen/marginSize16">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/tv_content_complaint_content"
					android:lineSpacingExtra="4dp"
					android:text="@string/lorem_ipsum_text"
					android:textAppearance="@style/TextAppearance.AppCompat.Caption"
					android:textColor="@color/grey3" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:orientation="horizontal"
				android:layout_marginTop="@dimen/marginSize24"
				android:gravity="center">

				<TextView
					style="@style/TextViewMain"
					android:id="@+id/tv_content_complaint_counter"
					tools:text="3 Komentar" />
			</LinearLayout>

			<androidx.recyclerview.widget.RecyclerView
				android:id="@+id/rv_content_complaint_reply"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:visibility="gone"
				android:paddingBottom="@dimen/marginSize50" />
		</LinearLayout>
	</ScrollView>

	<androidx.cardview.widget.CardView
		android:layout_width="match_parent"
		android:layout_height="@dimen/marginSize50"
		style="@style/CardviewMain"
		app:layout_constraintBottom_toBottomOf="parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="horizontal"
			android:weightSum="2">

			<com.google.android.material.textfield.TextInputLayout
				style="@style/InputLayoutDefault"
				android:hint="Tulis Pesan"
				android:id="@+id/edt_content_complaint_reply"
				android:layout_weight="0.3">

				<com.google.android.material.textfield.TextInputEditText style="@style/EditTextDefault" />
			</com.google.android.material.textfield.TextInputLayout>

			<LinearLayout
				android:id="@+id/ll_btn_send_reply_complaint"
				android:layout_width="match_parent"
				android:layout_height="match_parent"
				android:layout_weight="1.7"
				android:background="@color/blue2"
				android:gravity="center">

				<ImageView
					android:layout_width="@dimen/marginSize24"
					android:layout_height="@dimen/marginSize24"
					android:layout_gravity="center"
					android:background="@drawable/ic_send_white_24dp" />
			</LinearLayout>
		</LinearLayout>

	</androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>