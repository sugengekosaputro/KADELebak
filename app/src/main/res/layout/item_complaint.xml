<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">

	<LinearLayout
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:orientation="vertical"
		android:id="@+id/ll_item_complaint">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_marginTop="@dimen/marginSize8"
			android:orientation="horizontal"
			android:weightSum="2">

			<ImageView
				android:layout_width="@dimen/marginSize24"
				android:layout_height="@dimen/marginSize24"
				android:layout_gravity="center"
				android:layout_weight="0.2"
				android:src="@drawable/ic_person_24dp" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_weight="1.8"
				android:layout_marginTop="@dimen/marginSize8"
				android:orientation="vertical">

				<LinearLayout
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:orientation="horizontal"
					android:weightSum="2">

					<TextView
						android:layout_weight="1"
						android:id="@+id/tv_complaint_name"
						style="@style/TextViewMain"
						android:text="Username User 1" />
					<TextView
						android:id="@+id/tv_complaint_section"
						android:layout_weight="1"
						android:gravity="right"
						style="@style/TextViewMain"
						android:text="Bagian A"
						android:textSize="@dimen/textSize12"
						android:paddingRight="@dimen/paddingSize8"
						android:textColor="@color/grey3"
						android:textStyle="italic"/>
				</LinearLayout>

				<TextView
					style="@style/TextViewMain"
					android:layout_marginTop="@dimen/marginSize8"
					android:id="@+id/tv_item_complaint_preview"
					android:text="1 Jan 2019 | 17:00"
					android:textColor="@color/grey2"
					android:maxLength="100"
					android:textSize="@dimen/textSize12" />

				<View
					android:layout_width="match_parent"
					android:layout_height="1dp"
					android:background="@color/grey1"
					android:layout_marginTop="@dimen/marginSize8"/>
			</LinearLayout>

		</LinearLayout>
	</LinearLayout>
</LinearLayout>